@page
@model ProjectQ.Pages.EquitiesModel
@using ProjectQ.Models

<h2 class="mb-4">Equities</h2>

<div class="d-flex flex-wrap gap-4">
    @foreach (var equity in Model.EquityList)
    {
        <div class="equity-card" style="border: 1px solid #ccc; padding: 12px; border-radius: 8px; margin: 10px; width: 300px;">
            <div style="margin-bottom: 8px;">
                <img src="@equity.ImageSvg" alt="@equity.Ticker logo" style="height: 40px;" />
            </div>
            <strong>@equity.Ticker</strong><br />
            <span>@equity.Name</span>
            <p style="font-size: 0.9em; color: #555;">@equity.Description</p>
        </div>
    }
</div>
